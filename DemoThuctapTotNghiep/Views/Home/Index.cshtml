@model IEnumerable<DemoThuctapTotNghiep.Models.modeSanPham>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <style>
        /* Make the image fully responsive */
        .carousel-inner img {
            width: 100%;
            height: 80%;
        }
    </style>
</head>
<div class="slider_area slider_style home_three_slider owl-carousel owl-loaded owl-drag">



    <div class="owl-stage-outer">

        <div id="demo" class="carousel slide" data-ride="carousel">
            <ul class="carousel-indicators">
                <li data-target="#demo" data-slide-to="0" class="active"></li>
                <li data-target="#demo" data-slide-to="1"></li>
                <li data-target="#demo" data-slide-to="2"></li>
            </ul>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="~/images/SLIDE1.jpg">

                </div>
                <div class="carousel-item">
                    <img src="~/images/slide2.jpg">

                </div>
                <div class="carousel-item">
                    <img src="~/images/slide3.jpg">

                </div>
            </div>

        </div>
    </div>
</div>

<section class="product_section womens_product">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="section_title">
                    <h2>Sản phẩm của chúng tôi</h2>
                    <p>Các sản phẩm thiết kế hiện đại,mới nhất</p>
                </div>
            </div>
        </div>
        <div class="product_area">
            <div class="row">
                
            </div>
            <div class="tab-content row shop_wrapper grid_4">
                @{int c = 0;}                
                @foreach (var item in Model)
                {
                    c++;
                    if (c <= 8)
                    {
                        <div class="col-lg-3" style="width: 100%; display: inline-block;">
                            <div class="single_product">
                                <div class="product_thumb">
                                    <a class="primary_img" href="/Home/Chitiet/@item.MaSP" tabindex="-1">
                                        <img src="@item.HinhAnh" alt="">
                                    </a>
                                    <div class="quick_button">
                                        <a href="/Home/Chitiet/@item.MaSP" title="quick_view" tabindex="-1">Xem sản phẩm</a>
                                    </div>

                                </div>
                                <div class="product_content">
                                    <h3><a href="/Home/Chitiet/@item.MaSP" tabindex="-1">@item.TenSP</a></h3>
                                    <span class="current_price">@item.GiaBan.ToString("#,###") Đ</span>

                                </div>
                            </div>
                        </div>}
                    else
                    {
                        break;
                    }

                }
            </div>
            <div class="section_title">
                <a class="button" style="width: 40%; color: #fff;" href="/Home/Contact"> Xem thêm</a>
            </div>
        </div>

    </div>
</section>

