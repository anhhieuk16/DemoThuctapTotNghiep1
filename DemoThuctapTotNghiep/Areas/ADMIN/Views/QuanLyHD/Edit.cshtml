@model DemoThuctapTotNghiep.Models.ModelHoaDon

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/ADMIN/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12">

        <div class="tile">

            <h3 class="tile-title">Sửa thông tin hóa đơn</h3>
            <div class="tile-body">
                <div class="row element-button">
                    <div class="col-sm-2">
                    </div>

                </div>
                @using (Html.BeginForm("Edit", "QuanLyHD", "post"))
                {
                    @Html.AntiForgeryToken()

            <div class="form-horizontal">

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                @Html.EditorFor(model => model.MaHD, new { htmlAttributes = new { @class = "form-control", @type = "hidden" } })


                <div class="form-group">
                    <label class="control-label">Tài khoản</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.HoTen, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.HoTen, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label">Mã sản phẩm </label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.TenSP, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.TenSP, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label">HÌnh thức thanh toán </label>
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.HinhThucTT, ViewBag.HinhthucTTList as SelectList, "--Hình thức thanh toán--", new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.HinhThucTT, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label">Địa chỉ nơi nhận </label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.NoiNhan, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.NoiNhan, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label">Trạng thái hóa đơn </label>
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.Trangthai, ViewBag.TrangthaiHDList as SelectList, "--Trạng thái hóa đơn--", new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Trangthai, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div>
                    <input type="submit" value="Lưu" class="btn btn-save" />

                    <a class="btn btn-cancel" href="/ADMIN/QuanLyHD/Index">Hủy bỏ</a>
                </div>
            </div>
                }

            </div>


        </div>

    </div>
</div>