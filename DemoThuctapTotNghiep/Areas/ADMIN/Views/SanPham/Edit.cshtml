@model DemoThuctapTotNghiep.Models.modeSanPham

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/ADMIN/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col-md-12">

        <div class="tile">

            <h3 class="tile-title">Sửa thông tin sản phẩm</h3>
            <div class="tile-body">
                <div class="row element-button">
                    <div class="col-sm-2">
                    </div>

                </div>
                @using (Html.BeginForm("Edit", "SanPham", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()

            <div class="form-horizontal">

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group">
                   
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.MaSP, new { htmlAttributes = new { @class = "form-control", @type = "hidden" } })
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label">Tên sản phẩm</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.TenSP, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.TenSP, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label">Số lượng</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.SoLuong, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.SoLuong, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label">Tình trạng</label>
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.TrinhTrangSP, ViewBag.TinhTMList as SelectList, "--Chọn Tình trạng sản phẩm--", new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.TrinhTrangSP, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @*ViewBag.DanhMList is holding all the cities values*@
                    <label class="control-label">Loại sản phẩm</label>
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.DanhMucSP, ViewBag.DanhMList as SelectList, "--Chọn loại sản phẩm--", new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.DanhMucSP, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label">Nhà cung cấp</label>
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.NhaCungCap, ViewBag.NhaCCList as SelectList, " --Chọn nhà cung cấp--", new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.NhaCungCap, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label">Giá bán</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.GiaBan, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.GiaBan, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label">Giá vốn</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.GiaVon, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.GiaVon, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label">Hình ảnh</label>
                    <div class="col-md-10">
                        <div>
                            <img id="output" src="@Model.HinhAnh" style="width:20%" />
                        </div>

                        <input type="file" class="upload" name="image" id="fileUpload" onchange="loadFile(event)" ; /><br />
                        @Html.ValidationMessageFor(model => model.HinhAnh, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label">Mô tả sản phẩm</label>
                    <div class="col-md-10">
                        @Html.TextAreaFor(model => model.MoTaSP, htmlAttributes: new { @class = "form-control", @style = "width:100%;" })
                        @Html.ValidationMessageFor(model => model.MoTaSP, "", new { @class = "text-danger" })
                    </div>
                </div>



                <div>

                    <input type="submit" value="Lưu" class="btn btn-save" />
                    <a class="btn btn-cancel" href="/ADMIN/SanPham/Index">Hủy bỏ</a>
                </div>
            </div>
                }


            </div>
        </div>
        </div>
        </div>
