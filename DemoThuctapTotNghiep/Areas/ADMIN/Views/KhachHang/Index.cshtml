
@using PagedList;
@using PagedList.Mvc;
@model PagedList.IPagedList<DemoThuctapTotNghiep.Models.ModeKhachHang>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/ADMIN/Views/Shared/_Layout.cshtml";
}
<head>
    <!-- Plugins CSS -->
    <link rel="stylesheet" href="~/CSSS/assets/css/plugins.css">

    <!-- Main Style CSS -->
    <link rel="stylesheet" href="~/CSSS/assets/css/style.css">
</head>
<div class="row">
    <div class="col-md-12">
        <div class="tile">
            <div class="tile-body">

                <div class="row element-button">
                    <div class="col-sm-2">

                        <a class="btn btn-add btn-sm" href="/ADMIN/KhachHang/Create" title="Thêm">
                            <i class="fas fa-plus"></i>
                            Tạo mới khách hàng
                        </a>
                    </div>

                </div>
                <div id="sampleTable_wrapper" class="dataTables_wrapper container-fluid dt-bootstrap4 no-footer">

                    <table class="table table-hover table-bordered js-copytextarea dataTable no-footer" cellpadding="0" cellspacing="0" border="0" id="sampleTable" role="grid" aria-describedby="sampleTable_info">
                        <thead>
                            <tr>
                                <th>
                                    tài khoản
                                </th>
                                <th>
                                    Mật khẩu
                                </th>
                                <th>
                                    Chức vụ
                                </th>
                                <th>
                                    Họ tên
                                </th>

                                <th>
                                    Địa chỉ
                                </th>
                                <th>
                                    Ngày sinh
                                </th>
                                <th>
                                    Số điện thoại
                                </th>
                                <th>
                                    Số CMND
                                </th>

                                <th>
                                    Nơi cấp CMND
                                </th>
                                <th>
                                    Giới tính
                                </th>
                                <th>Chức năng</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Usename)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.pass)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Chucvu)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.HoTen)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.DiaChi)
                                </td>
                                <td>
                                    @item.NgaySinh.ToString("yyyy/MM/dd")
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SDT)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SoCMND)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.NoiCap)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.GioiTinh)
                                </td>

                                @if (HttpContext.Current.Session["chucvu"].Equals("Quản lý"))
                                {
                                    <td>

                                        @Html.ActionLink(" ", "Edit", new { id = item.Usename }, new { @class = "fas fa-edit", @title = "Sửa" }) |

                                        @Html.ActionLink(" ", "Delete", new { id = item.Usename }, new { @class = "fas fa-trash-alt", @title = "Xóa" })
                                    </td>
                                }
                                
                            </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
            <div class="shop_toolbar t_bottom">
                <div class="pagination">
                    @Html.PagedListPager(Model, sotrang => Url.Action("Index", new { page = sotrang }))
                </div>
            </div>
    </div>
</div>
